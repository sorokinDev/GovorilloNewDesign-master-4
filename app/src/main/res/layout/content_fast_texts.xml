<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fast_texts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vsquad.projects.govorillo.FastTexts"
    tools:showIn="@layout/app_bar_fast_texts"
    android:background="@drawable/back">

    <ScrollView
        android:layout_weight="1"
        android:layout_height="221dp"
        android:layout_width="match_parent"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:background="@android:color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Текст"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv10"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="normal|italic" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/change"
        android:id="@+id/changer"
        android:onClick="changeText"
        android:layout_weight="0.01" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.01" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/normal"
        android:id="@+id/imageView9"
        android:layout_weight="0.01"
        android:onClick="doit" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/mainmicro"
        android:id="@+id/MainBtn"
        android:layout_height="wrap_content"
        android:onClick="startMicro" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultText"
        android:visibility="gone" />

</LinearLayout>
